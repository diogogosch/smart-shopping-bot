# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
BOT_USERNAME=YourBotName

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/smart_shop_bot
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# AI Provider Selection (openai, gemini, or none)
AI_PROVIDER=openai
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-3.5-turbo
GEMINI_API_KEY=your-gemini-key-here
GEMINI_MODEL=gemini-2.0-flash

# OCR Configuration
TESS ERACT_PATH=/usr/bin/tesseract  # Optional: for Linux systems
GOOGLE_VISION_API_KEY=your-google-vision-key-here

# Feature Flags
ENABLE_AI_SUGGESTIONS=true
ENABLE_PRICE_TRACKING=true
ENABLE_NOTIFICATIONS=true

# Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,pt_BR

# Logging
LOG_LEVEL=INFO

# Environment
ENVIRONMENT=production
